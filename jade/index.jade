html(ng-app='metroApp')
  head
    //- vendor scripts
    script(src='/vendor/jquery/jquery.js')
    script(src='/vendor/angular/angular.js')

    //- my scripts
    script(src='index.js')
    script(src='controllers.js')
    link(rel='stylesheet', href='style.css')

    //- misc settings
    meta(name="viewport", content="width=device-width, user-scalable=no")

  body(ng-controller='StationListCtrl')
    input(ng-model="stationName")

    div.station(ng-repeat="station in stations | orderBy:'name' | filter:stationName")
      p {{station.name}}
      div(ng-repeat="(line,trains) in station.data")
        p {{line}}
        table
          tr(ng-repeat="(dest, time) in trains")
            td {{dest}}
            td {{time}}

    footer
      p
